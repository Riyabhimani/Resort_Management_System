@{
    ViewBag.Title = "Login";
}

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #fdfdfd, #f3f3f3);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-card {
        background: #ffffff;
        border-radius: 20px;
        padding: 45px 35px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
        width: 420px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .login-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
        }

    .login-header {
        text-align: center;
        margin-bottom: 30px;
    }

        .login-header h2 {
            font-weight: 700;
            color: lightsalmon;
            margin-bottom: 5px;
        }

        .login-header p {
            color: #777;
            font-size: 14px;
        }

    .form-label {
        font-weight: 600;
        color: #444;
    }

    .input-group-text {
        background: #f9f9f9;
        border-radius: 12px 0 0 12px;
        border: 1px solid #ccc;
        border-right: none;
        color: lightsalmon;
    }

    .form-control, .role-select {
        border-radius: 0 12px 12px 0;
        padding: 12px;
        border: 1px solid #ccc;
        transition: all 0.3s ease;
    }

        .form-control:focus, .role-select:focus {
            border-color: lightsalmon;
            box-shadow: 0 0 8px rgba(255, 127, 80, 0.4);
            outline: none;
            background-color: #fff;
        }

    .role-select {
        background-color: #fff;
        color: slategray;
    }

        .role-select option {
            background-color: #fff;
            color: #444;
        }

    .login-btn {
        background: lightsalmon;
        border: none;
        border-radius: 12px;
        padding: 12px;
        font-weight: 600;
        color: #fff;
        transition: all 0.4s ease;
    }

        .login-btn:hover {
            background: linear-gradient(45deg, lightsalmon, #ff9966);
            transform: scale(1.02);
        }

    .auth-links {
        text-align: center;
        margin-top: 20px;
    }

        .auth-links a {
            display: inline-block;
            font-size: 14px;
            color: #666;
            text-decoration: none;
            margin: 5px 8px;
            font-weight: 500;
            padding: 6px 12px;
            border-radius: 20px;
            transition: all 0.3s ease;
        }

            .auth-links a i {
                margin-right: 6px;
                color: lightsalmon;
            }

            .auth-links a:hover {
                background: rgba(255, 160, 122, 0.12);
                color: lightsalmon;
            }

    .alert-danger {
        font-size: 14px;
        padding: 10px;
    }
</style>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="login-card">
        <div class="login-header">
            <h2>Welcome Back</h2>
            <p>Please login to access your account</p>
        </div>

        <form method="post" onsubmit="showLoading()">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                    <input type="text" name="UserName" class="form-control" placeholder="Enter username" required />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input type="password" id="Password" name="Password" class="form-control" placeholder="Enter password" required />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Role</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-people"></i></span>
                    <select class="form-control role-select" name="Role" required>
                        <option value="" disabled selected>Select role</option>
                        <option value="Admin">Admin</option>
                        <option value="Manager">Manager</option>
                        <option value="User">User</option>
                    </select>
                </div>
            </div>

            <button type="submit" id="loginBtn" class="btn login-btn w-100 mb-3">
                <span id="btnText">Login</span>
            </button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-2 rounded-3 text-center">
                @ViewBag.Error
            </div>
        }

        <div class="auth-links">
            <a href="#"><i class="bi bi-key"></i>Forgot password?</a>
            <a href="#"><i class="bi bi-pencil-square"></i>Register now</a>
        </div>
    </div>
</div>

<script>
    function showLoading() {
        const btn = document.getElementById("loginBtn");
        const text = document.getElementById("btnText");
        text.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Logging in...';
        btn.disabled = true;
    }
</script>


