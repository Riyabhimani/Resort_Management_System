@model UserModel

@{
    ViewData["Title"] = Model.UserId == 0 ? "Add User" : "Edit User";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="GuestAddEdit" method="post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

         <input type="hidden" asp-for="UserId" /> 
         <input type="hidden" asp-for="Created" /> 

        <div class="mb-3">
            <label asp-for="UserName" class="form-label"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Role" class="form-label"></label>
            <input asp-for="Role" class="form-control" />
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="IsActive" class="form-label"></label>
            <input asp-for="IsActive" class="form-control" />
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" asp-controller="User" asp-action="UserAddEdit">@((Model.UserId == 0) ? "Add" : "Update")</button>
        <a class="btn btn-secondary" asp-controller="User" asp-action="UserList">Back</a>
    </form>
</div>
