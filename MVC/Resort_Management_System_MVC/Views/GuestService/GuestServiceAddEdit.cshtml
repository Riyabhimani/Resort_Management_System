@model GuestServiceModel

@{
    ViewData["Title"] = Model.GuestServiceId == 0 ? "Add GuestService" : "Edit GuestService";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="GuestServiceAddEdit" method="post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" asp-for="GuestServiceId" />
        <input type="hidden" asp-for="Created" />
        <input type="hidden" asp-for="ReservationId" />

        <div class="form-group mb-3">
            <label>Reservation Status</label>
            <input type="text" class="form-control" value="Confirmed" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="GuestId" class="form-label"></label>
            <select asp-for="GuestId" class="form-control" asp-items="ViewBag.Guests">
                <option value="">-- Select Guest --</option>
            </select>
            <span asp-validation-for="GuestId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ServiceId" class="control-label">Service</label>
            <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.Services">
                <option value="">-- Select Service --</option>
            </select>
            <span asp-validation-for="ServiceId" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-control"/>
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DateRequested" class="form-label"></label>
            <input asp-for="DateRequested" class="form-control" type="date" />
            <span asp-validation-for="DateRequested" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">@((Model.GuestServiceId == 0) ? "Add" : "Update")</button>
        <a asp-action="GuestServiceList" class="btn btn-secondary">Back to List</a>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function LoadGuests(reservationId) {
            fetch(`/GuestService/GetGuestsByReservation?reservationId=${reservationId}`)
                .then(response => response.json())
                .then(data => {
                    const guestDropdown = document.getElementById('GuestId');
                    guestDropdown.innerHTML = '<option value="">-- Select Guest --</option>';
                    data.forEach(guest => {
                        const option = document.createElement('option');
                        option.value = guest.guestId;
                        option.text = guest.fullName;
                        guestDropdown.appendChild(option);
                    });
                });
        }
    </script>
}