@model ServiceModel

@{
    ViewData["Title"] = Model.ServiceId == 0 ? "Add Service" : "Edit Service";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="ServiceAddEdit" method="post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <input type="hidden" asp-for="ServiceId" />
        <input type="hidden" asp-for="Created" />

        @*<div class="mb-3">
            <label asp-for="GuestId" class="form-label"></label>
            <select asp-for="GuestId" class="form-select" asp-items="@(new SelectList(Model.GuestList, "GuestId", "FullName"))">
                <option value="">-- Select Guest --</option>
            </select>
            <span asp-validation-for="GuestId" class="text-danger"></span>
        </div>*@

        <div class="mb-3">
            <label asp-for="ServiceName" class="form-label"></label>
            <input asp-for="ServiceName" class="form-control" />
            <span asp-validation-for="ServiceName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ServiceCost" class="form-label"></label>
            <input asp-for="ServiceCost" class="form-control" />
            <span asp-validation-for="ServiceCost" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ServiceStartTime" class="form-label"></label>
            <input asp-for="ServiceStartTime" class="form-control" />
            <span asp-validation-for="ServiceStartTime" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ServiceEndTime" class="form-label"></label>
            <input asp-for="ServiceEndTime" class="form-control" />
            <span asp-validation-for="ServiceEndTime" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label"></label>
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" asp-controller="Service" asp-action="ServiceAddEdit">@((Model.ServiceId == 0) ? "Add" : "Update")</button>
        <a class="btn btn-secondary" asp-controller="Service" asp-action="ServiceList">Back</a>
    </form>
</div>
