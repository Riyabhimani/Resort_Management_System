Booking Add Edit
@model Resort_Management_System_MVC.Models.BookingModel

@{
    ViewData["Title"] = Model.BookingId == 0 ? "Add Booking" : "Edit Booking";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="BookingAddEdit" method="post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <input type="hidden" asp-for="BookingId" />
        <input type="hidden" asp-for="Created" />

        <div class="mb-3">
            <label asp-for="FullName" class="form-label"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ContactNumber" class="form-label"></label>
            <input asp-for="ContactNumber" class="form-control" />
            <span asp-validation-for="ContactNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="IdProof" class="form-label"></label>
            <input asp-for="IdProof" class="form-control" />
            <span asp-validation-for="IdProof" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NumberOfPersons" class="form-label"></label>
            <input asp-for="NumberOfPersons" class="form-control" type="number" min="1" />
            <span asp-validation-for="NumberOfPersons" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NumberOfRoom" class="form-label"></label>
            <input asp-for="NumberOfRoom" class="form-control" type="number" min="1" />
            <span asp-validation-for="NumberOfRoom" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="BookingDate" class="form-label"></label>
            <input asp-for="BookingDate" type="date" class="form-control" />
            <span asp-validation-for="BookingDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="RoomType" class="form-label"></label>
            <select asp-for="RoomType" class="form-select">
                <option value="">-- Select Room Type --</option>
                <option value="Deluxe">Deluxe</option>
                <option value="Suite">Suite</option>
                <option value="Single">Single</option>
                <option value="Double">Double</option>
            </select>
            <span asp-validation-for="RoomType" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="AdvancePayment" class="form-label"></label>
            <input asp-for="AdvancePayment" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="AdvancePayment" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Modified" class="form-label"></label>
            <input asp-for="Modified" class="form-control" type="datetime-local" />
            <span asp-validation-for="Modified" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">@((Model.BookingId == 0) ? "Add" : "Update")</button>
        <a asp-action="BookingList" class="btn btn-secondary">Back</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}