@model List<BookingModel>
@{
    ViewData["Title"] = "Booking List";
}

<a asp-action="BookingAddEdit" asp-controller="Booking" class="btn btn-primary mb-3"
   onclick="return confirm('Are you sure you want to add a Booking Detail?');">
    Add Booking
</a>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Booking List</h2>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>BookingId</th>
                <th>FullName</th>
                <th>Email</th>
                <th>ContactNumber</th>
                <th>Address</th>
                <th>IdProof</th>
                <th>No. of Persons</th>
                <th>No. of Rooms</th>
                <th>BookingDate</th>
                <th>RoomType</th>
                <th>AdvancePayment</th>
                <th>Created</th>
                <th>Modified</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BookingId</td>
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@item.ContactNumber</td>
                        <td>@item.Address</td>
                        <td>@item.IdProof</td>
                        <td>@item.NumberOfPersons</td>
                        <td>@item.NumberOfRooms</td>
                        <td>@item.BookingDate.ToString("yyyy-MM-dd")</td>
                        <td>@item.RoomType</td>
                        <td>@item.AdvancePayment</td>
                        <td>@item.Created.ToString("yyyy-MM-dd")</td>
                        <td>@item.Modified?.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a asp-controller="Booking" asp-action="BookingAddEdit" asp-route-id="@item.BookingId"
                               class="btn btn-sm btn-success" onclick="return confirm('Are you sure you want to edit this Booking Detail?');">
                                Edit
                            </a>
                            <a asp-controller="Booking" asp-action="BookingDelete" asp-route-id="@item.BookingId"
                               class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this Booking Detail?');">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="14" class="text-center text-muted">No booking records found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
